<h2 class="text-light">{{name}}'s Dashboard</h2>

<section class="card bg-light text-secondary shadow mb-4">
    <summary class="d-flex flex-row flex-wrap card-header bg-info text-light justify-content-between align-items-end">
        <div class="d-flex flex-row flex-wrap align-items-end">
            <h4 class="mb-0 mr-2">Create Blog</h4>
        </div>
    </summary>
    <article class="card-body">
        <form id="new-blog-form">
            <div class="mb-3">
                <input type="text" class="form-control" id="blog-title" aria-describedby="blog title" placeholder="New Blog Title" />
            </div>
            <div class="mb-3">
                <textarea class="form-control" id="blog-content" aria-describedby="blog content" placeholder="New Blog Content" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </article>
</section>

{{#if blogs.length}}
<h3 class="text-light">My Blogs</h3>
{{/if}}

{{#each blogs}}
<section class="blogs card bg-light text-secondary shadow mb-4">
    <summary class="d-flex flex-row card-header bg-info text-light justify-content-between align-items-end pr-3">
        <a class="text-decoration-none" href="/blog/{{id}}">
            <h4 class="mb-0 mr-2 text-light">{{title}}</h4>
        </a>
        <div class="d-flex flex-row flex-wrap flex-fill align-items-end">
            <p class="mb-0 text-right">Created {{format_date date_created}}</p>
            <button class="delete btn btn-secondary btn-sm" data-id="{{id}}">Delete</button>
        </div>
    </summary>
    <article class="card-body">
        <p>{{content}}</p>
    </article>
</section>
{{/each}}

<script src="/js/dashboard.js"></script>